<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!-- 원래 클래스명은 패키지까지 포함하기때문에 너무 길어서 짧은 별명을 만들어서 접근하기 위해 기술한다 -->
	<typeAliases>
		<typeAlias alias="BoardDto"
			type="com.multi.myhome1.board.dto.BoardDto" />
		<typeAlias alias="ScoreDto"
			type="com.multi.myhome1.score.dto.ScoreDto" />
		<typeAlias alias="MemberDto"
			type="com.multi.myhome1.member.dto.MemberDto" />
		<typeAlias alias="ArtworkDto"
			type="com.multi.myhome1.artwork.dto.ArtworkDto" />

	</typeAliases>

	<mappers>
		<mapper resource="/com/multi/myhome1/board/data/Board.xml" />
		<mapper resource="/com/multi/myhome1/score/data/Score.xml" />
		<mapper resource="/com/multi/myhome1/member/data/Member.xml" />
		<mapper resource="/com/multi/myhome1/artwork/data/Artwork.xml" />
	</mappers>

</configuration>
